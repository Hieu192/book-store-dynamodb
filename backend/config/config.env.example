# Server Configuration
PORT=4000
NODE_ENV=DEVELOPMENT

# Database Type (mongodb or dynamodb)
DB_TYPE=dynamodb

# Migration Phase (MONGODB_ONLY, DUAL_WRITE_MONGO_PRIMARY, DUAL_WRITE_DYNAMO_PRIMARY, DYNAMODB_ONLY)
MIGRATION_PHASE=DYNAMODB_ONLY

# AWS DynamoDB Configuration
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
# DYNAMODB_ENDPOINT=http://localhost:8000  # Uncomment for local DynamoDB

# MongoDB (Legacy - only needed if using MONGODB_ONLY or dual-write phases)
DB_URI=mongodb://127.0.0.1:27017/shopit
TEST_DB_URI=mongodb://127.0.0.1:27017/shopit_test

# Frontend URL
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_random_jwt_secret_key_here
JWT_EXPIRES_TIME=7d
COOKIE_EXPIRES_TIME=7

# PayOS Payment Gateway
PAYOS_CLIENT_ID=your_payos_client_id
PAYOS_API_KEY=your_payos_api_key
PAYOS_CHECKSUM_KEY=your_payos_checksum_key

# Email Configuration (SMTP - Optional)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_EMAIL=your_smtp_email
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@shopit.com
SMTP_FROM_NAME=Shopit

# Google OAuth2 Email (Recommended for production)
GOOGLE_MAILER_CLIENT_ID=your_google_client_id
GOOGLE_MAILER_CLIENT_SECRET=your_google_client_secret
GOOGLE_MAILER_REFRESH_TOKEN=your_google_refresh_token
ADMIN_EMAIL_ADDRESS=your_admin_email@example.com

# AWS S3 Configuration (for image uploads)
S3_BUCKET_NAME=your-s3-bucket-name

# AWS CloudFront Configuration (CDN for images)
CLOUDFRONT_URL=https://your-cloudfront-domain.cloudfront.net

# Stripe Payment (Optional - not currently used)
STRIPE_SECRET_KEY=
STRIPE_API_KEY=

# Redis Cache (Optional - improves performance)
REDIS_URL=redis://localhost:6379
# For Redis Cloud: redis://username:password@host:port

# Cloudinary (Legacy - not used anymore, replaced by S3)
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=
